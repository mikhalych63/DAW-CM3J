[Unit]
Description=CamillaDSP Daemon
After=syslog.target
StartLimitIntervalSec=10
StartLimitBurst=10

[Service]
Type=simple
ExecStart=/opt/camilladsp/bin/camilladsp -w -p 1234 -o /opt/camilladsp/camilladsp.log -a 0.0.0.0 -s /opt/camilladsp/statefile.yml
Restart=always
Restart=always
RestartSec=1
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=camilladsp
User=root
Group=root
#CPUSchedulingPolicy=fifo
#CPUSchedulingPriority=10

[Install]
WantedBy=multi-user.target

